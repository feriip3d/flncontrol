@model IEnumerable<engenharia.Models.Colaborador.Colaborador>
@{ Layout = "~/Views/Shared/_LayoutDashboard.cshtml"; }

@section Scripts
{
    <script src="~/js/View/Login/acesso.js"></script>
}

<div class="content-wrapper">
    <section class="content-header">
        <div class="container-fluid">
            <div class="row mb-2">
                <div class="col-sm-6">
                    <h1>Perfis</h1>
                </div>
            </div>
        </div>

        @using (Html.BeginForm("Gravar", "Colaborador", FormMethod.Post))
        {
<div class="row">
    <div class="col-2">
        <input type="submit" class="btn btn-primary btn-block float-right" name="novoLogin" id="novoLogin" value="Cadastrar">
    </div>
</div>}
    </section>
    <section class="content">

        <div class="card">
            <div class="card-body p-0">
                <table class="table table-striped projects">
                    <thead>
                        <tr>
                            <th style="width: 20%">
                                Nome
                            </th>
                            <th style="width: 8%" class="text-center">
                                Status
                            </th>
                            <th style="width: 20%">
                            </th>
                        </tr>
                    </thead>

                    <tbody>
                        @foreach (var colaborador in Model)
                        {
            <tr>
                <td class="text">
                    @colaborador.nome
                </td>
                <td class="project-state">
                    <span class="badge @(colaborador.status == "Ativo" ? "badge-success" : "badge-danger") ">
                        @colaborador.status
                    </span>
                </td>
                <td class="project-actions text-right">
                    <input type="submit" class="btn btn-primary btn-block" name="novoLogin" id="novoLoginEdit" value="Editar" onclick="pegarDadosEdit('@colaborador.nome', '@colaborador.login', '@colaborador.senha', '@colaborador.cpf', '@colaborador.rg', '@colaborador.data_nasc', '@colaborador.telefone', '@colaborador.email', '@colaborador.cargo', '@colaborador.status', '@colaborador.nivel')" />
                </td>
            </tr>}
                    </tbody>
                </table>
            </div>
        </div>
    </section>
</div>}